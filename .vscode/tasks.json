{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "args": ["-c"],
    "presentation": {
        "reveal": "always"
    },
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "Build release",
			// "options": {
			// 	"cwd": "${workspaceRoot}/build/Release"
			// },
            "command": [
                "mkdir -p build/Release &&",
                "cd build/Release &&",
                "rm -rf * &&",
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Release -DCMAKE_PREFIX_PATH=/usr/local/opt/llvm@6/ ../.. &&",
                "cmake --build ."
            ],
            "group": "build"
        },
        {
            "label": "Build debug",
            "command": [
                "mkdir -p build/Debug &&",
                "cd build/Debug &&",
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_PREFIX_PATH=/usr/local/opt/llvm@6/ ../.. &&",
                "cmake --build ."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run release",
            "command": "${workspaceRoot}/build/Release/lib/warriorlang",
            "dependsOn": "Build release",
            "group": "none"
        },
        {
            "label": "Run debug",
            "command": "${workspaceRoot}/build/Debug/lib/warriorlang",
            "dependsOn": "Build debug",
            "group": "none"
        }
    ]
}